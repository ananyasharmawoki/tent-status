<a href="<%= full_path('/') %>" data-fragment="" data-match-url="/" data-view="AppNavigationItem">
  <li>
    <i class="fa fa-list"></i>Timeline
  </li>
</a>

<a href="<%= full_path('/mentions') %>" data-fragment="mentions" data-match-url="/mentions" data-view="AppNavigationItem">
  <li>
    <i class="fa fa-thumb-tack"></i>Mentions <span class='count-badge-container'><span data-view="MentionsUnreadCount" class='badge badge-important hidden count-badge'></span></span>
  </li>
</a>

<a href="<%= full_path('/reposts') %>" data-fragment="reposts" data-match-url="/reposts" data-view="AppNavigationItem">
  <li>
    <i class="fa fa-retweet"></i>Reposts <span class='count-badge-container'><span data-view="RepostsUnreadCount" class='badge hidden count-badge'></span></span>
  </li>
</a>

<a href="<%= full_path('/profile') %>" data-fragment="profile" data-match-url="/profile" data-view="AppNavigationItem">
  <li>
    <i class="fa fa-user"></i>Profile
  </li>
</a>

<% if TentStatus.settings[:site_feed_api_root] %>
  <a href="<%= full_path('/site-feed') %>" data-fragment="site-feed" data-match-url="/site-feed" data-view="AppNavigationItem">
    <li>
      <i class="fa fa-globe"></i>Site Feed
    </li>
  </a>
<% end %>
